module ApiDoc
  module Resources

    class Version

       attr_reader :guid, :version, :json

       def initialize(opts={})
         @guid = opts.delete(:guid)
         Apidoc::Preconditions.assert_class_or_nil(@guid, String)
         Apidoc::Preconditions.check_not_nil(@guid, 'guid is required')

         @version = opts.delete(:version)
         Apidoc::Preconditions.assert_class_or_nil(@version, String)
         Apidoc::Preconditions.check_not_nil(@version, 'version is required')

         @json = opts.delete(:json)
         Apidoc::Preconditions.assert_class_or_nil(@json, String)
         Apidoc::Preconditions.check_not_nil(@json, 'json is required')

         Apidoc::Preconditions.check_empty_opts(opts)
      end

    end

  end
end